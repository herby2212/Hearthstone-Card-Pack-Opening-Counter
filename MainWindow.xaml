<mah:MetroWindow x:Class="HDT_CardPackOpeningCounter.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:HDT_CardPackOpeningCounter"
                 Title="Hearthstone Card Pack Opening Counter"
                 Width="800"
                 Height="434.262"
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d" Closing="MetroWindow_Closing">
    <Grid HorizontalAlignment="Left" Height="402" VerticalAlignment="Top" Width="790">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="38"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lCommon" Content="Common" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Label x:Name="lRare" Content="Rare" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Label x:Name="lEpic" Content="Epic" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Label x:Name="lLegendary" Content="Legendary" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Label x:Name="lCountCommon" Content="0" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountRare" Content="0" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountEpic" Content="0" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountLegendary" Content="0" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lGoldenCommon" Content="Golden Common" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="4" Margin="0,1,0,0"/>
        <Label x:Name="lGoldenRare" Content="Golden Rare" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="4" Margin="0,1,0,0"/>
        <Label x:Name="lGoldenEpic" Content="Golden Epic" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="4" Margin="0,1,0,0"/>
        <Label x:Name="lGoldenLegendary" Content="Golden Legendary" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="188" Height="33" Background="{x:Null}" RenderTransformOrigin="0.275,0.324" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="4" Margin="0,1,0,0"/>
        <Label x:Name="lCountGoldenCommon" Content="0" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountGoldenRare" Content="0" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountGoldenEpic" Content="0" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lCountGoldenLegendary" Content="0" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="54" Width="188" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Grid Grid.Column="1" Grid.Row="8" HorizontalAlignment="Left" Width="188">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="IconDustingValue" Width="12*"/>
                <ColumnDefinition x:Name="TextDustingValue" Width="35*"/>
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="48"/>
            <Label x:Name="lCraftingCost" Content="Cafting Cost" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" Width="140" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="4" Grid.Row="8" HorizontalAlignment="Left" Width="188">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="IconCraftingCost" Width="12*"/>
                <ColumnDefinition x:Name="TextCraftingCost" Width="35*"/>
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="48"/>
            <Label x:Name="lDustingValue" Content="Dusting Value" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" Width="140" VerticalContentAlignment="Center"/>
        </Grid>
        <Label x:Name="lTotalCards" Content="Total Cards" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="8" VerticalAlignment="Center" Height="34" Width="188" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lTotalPacks" Content="Total Packs" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="8" VerticalAlignment="Center" Height="34" Width="188" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="cbOverlay" Content="Overlay" Grid.Column="4" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Height="26" Width="123" FontSize="18" Padding="14,-1,0,0" VerticalContentAlignment="Center" UseLayoutRounding="True" Unchecked="cbOverlay_Unchecked" Checked="cbOverlay_Checked"/>
        <Button x:Name="btnReset" Content="Reset" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="168" Height="26" Click="btnReset_Click"/>
        <Button x:Name="btnSave" Content="Save" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="168" Height="26" Click="btnSave_Click"/>
        <Button x:Name="btnLoad" Content="Load" Grid.Column="3" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="168" Height="26" Click="btnLoad_Click"/>
    </Grid>
</mah:MetroWindow>